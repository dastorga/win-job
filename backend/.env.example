# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/devops_jobs
GOOGLE_CLOUD_SQL_CONNECTION_NAME=project:region:instance

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LinkedIn credentials (optional - for authenticated scraping)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Redis for Celery
REDIS_URL=redis://localhost:6379/0

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Scraping configuration
MAX_JOBS_PER_SCRAPE=50
SCRAPE_INTERVAL_HOURS=6